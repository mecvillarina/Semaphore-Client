<UserControl x:Class="Semaphore.UI.Views.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             d:DesignHeight="720"
             d:DesignWidth="1280"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="White"
             mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Margin="10,0"
                       VerticalAlignment="Center"
                       FontSize="32"
                       FontWeight="Bold"
                       Text="Semaphore.Co" />

            <Grid Grid.Column="1">
                <Button Margin="0,5"
                        Padding="20,5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Command="{Binding SendCommand}"
                        Content="Send" />
            </Grid>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Margin="10,0">
                <TextBlock FontWeight="Bold"
                           Text="Api Key" />
                <TextBox Height="30"
                         Margin="0,5"
                         Padding="10,0"
                         VerticalContentAlignment="Center"
                         Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Margin="10,0">
                <TextBlock FontWeight="Bold"
                           Text="Sender Name" />
                <TextBox Height="30"
                         Margin="0,5"
                         Padding="10,0"
                         VerticalContentAlignment="Center"
                         Text="{Binding SenderName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2"
              Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1"
                  Margin="10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold"
                               Text="SMS Message" />
                    <TextBlock FontWeight="Bold"
                               Text=" (" />
                    <TextBlock FontWeight="Bold"
                               Text="{Binding Message.Length}" />
                    <TextBlock FontWeight="Bold"
                               Text=")" />
                </StackPanel>

                <TextBox Grid.Row="1"
                         Margin="0,5"
                         Padding="10"
                         AcceptsReturn="True"
                         HorizontalScrollBarVisibility="Disabled"
                         Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto" />
            </Grid>

            <Grid Margin="10,0">
                <StackPanel>
                    <TextBlock FontWeight="Bold"
                               Text="Import Contacts"
                               TextWrapping="Wrap" />
                    <TextBlock Text="Import contact numbers txt file (.txt). The numbers must be comma separated."
                               TextWrapping="Wrap" />

                    <Button Margin="0,5"
                            Padding="20,5"
                            HorizontalAlignment="Left"
                            Command="{Binding BrowseContactsCommand}"
                            Content="Browse" />

                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontWeight="Bold"
                                   Text="Number of imported contacts:"
                                   TextWrapping="Wrap" />
                        <TextBlock Margin="5,0"
                                   Text="{Binding ContactNumbers.Count}"
                                   TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel Margin="0,10"
                                Orientation="Horizontal">
                        <TextBlock FontWeight="Bold"
                                   Text="Status:"
                                   TextWrapping="Wrap" />
                        <TextBlock Margin="5,0"
                                   Text="{Binding StatusMessage}"
                                   TextWrapping="Wrap" />
                    </StackPanel>

                </StackPanel>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
